@{ Layout = "~/Shared/_Layout.cshtml";}

<div class="container-fluid">
    <div class="row">
        <section class="col-lg-12">
            <div class="panel panel-success">
                <div class="panel-heading">
                    <h2 class="center-block">Deluxe Cheesesteaks</h2>
                </div>
                <div class="panel-body">
                    <nav class="navbar navbar-default navbar-nav">
                        <ul class="nav nav-tabs navbar-nav">
                            <li> <a class="navbar-btn" href="@Href("~/HomePage.cshtml")"> HomePage</a></li>
                            <li><a class="navbar-btn" href="@Href("~/BleuDonculous.cshtml")"> Bleu Donculous</a></li>
                            <li><a class="navbar-btn" href="@Href("~/PepperDonculous.cshtml")"> Pepper Donculous</a></li>
                            <li><a class="navbar-btn" href="@Href("~/DevilsSpitDonculous.cshtml")"> Devil's Spit Donculous</a></li>
                        </ul>
                    </nav>
                </div>
            </div>
        </section>
    </div>
    <div class="row">
        <div class="panel panel-danger">
            <div class="panel-heading">
                <h1 class="center-block">Devil's Spit Donculous</h1>
                <p>A fiery cheesesteak with grilled fresh jalepenos and a tiny dab of our secret Donculous Sauce. It also has several deep fried jalepeno poppers on it(awesome). The whole thing is smothered in a spicy nacho cheese.</p>
            </div>
            <div class="panel-body">
                <table class="table table-hover table-inverse table-bordered">
                    <thead>
                        <tr>
                            <td>Size</td>
                            <td>Steak Portion</td>
                            <td>Amount of Cheese</td>
                            <td>Price</td>
                        </tr>
                    </thead>
                    <tbody>
                        @{ for (int i = 0; i < App.RowNum; i++)
            {

                                <tr>
                                    <td>@App.Size</td>
                                    <td>@App.MeatAmount</td>
                                    <td>@App.Cheese</td>
                                    <td>$@App.Price</td>
                                </tr>


                            }

                            <tr>
                                <td colspan="2">@App.SideChoice</td>
                                <td colspan="2">@App.SidePrice</td>

                            </tr>

                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>
</div>
