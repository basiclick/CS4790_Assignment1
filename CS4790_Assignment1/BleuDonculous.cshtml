@{ Layout = "~/Shared/_Layout.cshtml";}
<h1>Bleu Donculous:</h1>
<p>A mouthwatering cheesesteak with mounds of blue cheese, swiss cheese, and mushrooms.</p>

<table border="2">
    <tr>
        <td>Size</td>
        <td>Steak Portion</td>
        <td>Amount of Cheese</td>
        <td>Price</td>
    </tr>
    @{ for (int i = 0; i < App.RowNum; i++)
        {
            <tr>
                <td>@App.Size</td>
                <td>@App.MeatAmount</td>
                <td>@App.Cheese</td>
                <td>@App.Price</td>
            </tr>
        }
    }  
</table>